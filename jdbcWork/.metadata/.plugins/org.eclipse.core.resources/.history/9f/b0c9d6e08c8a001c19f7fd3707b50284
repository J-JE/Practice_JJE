package com.kh.service;

//static 필수! .* 필수!
import static com.kh.common.JDBCTemplate.*;

import java.sql.Connection;
import java.util.ArrayList;

import com.kh.model.dao.ProductIODao;
import com.kh.model.vo.ProductIO;

public class ProductService {

	public ArrayList<ProductIO> selectAllIo() { //전체 입출고 내역 조회
		Connection conn = getConnection();
		ArrayList<ProductIO> list = new ProductIODao().selectAllIo(conn);
		
		return list;
	}

	public ArrayList<ProductIO> selectInOut(int i) { //입/출고 내역 조회
		Connection conn = getConnection();
		ArrayList<ProductIO> list = new ProductIODao().selectInOut(conn, i);
		
		return list;
	}

	public int ProductInOut(ProductIO p) { //상품 입/출고
		Connection conn = getConnection();
		
		int result = new ProductIODao().ProductInOut(conn, p);
		if(result > 0) {
			commit(conn);
		}else {
			rollback(conn);
		}
		return result;
	}
}
